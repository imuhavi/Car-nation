          crossorigin="anonymous"></script>
  <script>
    function initMap() {
      var mapOptions = {
        center: {lat: -1.3247782, lng: 36.7954619},  // Replace with your desired coordinates
        zoom: 12 // Adjust the zoom level as needed
      };
      

      var map = new google.maps.Map(document.getElementById('map'), mapOptions);
       var marker = new google.maps.Marker({
        position: {lat: -1.3247782, lng: 36.7954619}, // Replace with your desired coordinates
        map: map,
         title: 'CarNation Auto Mart' // Replace with your desired title for the marker
      });

      // Add click event listener to the marker
      marker.addListener('click', function() {
        // Define the destination coordinates for the direction
        var destination = {lat: -1.3247782, lng: 36.7954619}; // Updated coordinates

        // Open Google Maps with the direction from the current location to the destination
        window.open('https://www.google.com/maps/dir/?api=1&destination=' + destination.lat + ',' + destination.lng);
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
  <!-- Replace "YOUR_API_KEY" with your actual API key -->
